<% content_for :title do %>
  <title>Viking Store Admin Portal</title>
<% end %>

<div class="row">
  <div class="col-md-9 main-content">
    <h2 class="text-center">User <%=@user.id %>: <%=@user.first_name %> <%=@user.last_name %></h2>


    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <h3>Demographic Inforrmation</h3>
        </tr>
        <tr>
          <td><strong>First Name:</strong></td>
          <td><%=@user.first_name %></td>
        </tr>
        <tr>
          <td><strong>Last Name:</strong></td>
          <td><%=@user.last_name %></td>
        </tr>
        <tr>
          <td><strong>Email</strong></td>
          <td><%=@user.email %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-striped table-bordered">
    

    <p><%= link_to "View Saved Addresses", "#" %></p>
    <p><%= link_to "View Unplaced Order (Cart)", "#" %></p>

  </div>
</div>