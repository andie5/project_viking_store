<table class="table table-striped table-bordered">
  <tbody>
   <tr>
      <h3 class="text-center">Credit Card Inforrmation</h3>
    </tr>
    <tr>
      <td><strong>First Name</strong></td>
      <td><%=@user.first_name %></td>
    </tr>
    <tr>
      <td><strong>Last Name</strong></td>
      <td><%=@user.last_name %></td>
    </tr>
    <tr>
      <td><strong>Number</strong></td>
      <td><%= @user.credit_cards.first.card_number%></td>
    </tr>
    <tr>
      <td><strong>Expiration</strong></td>
      <td><%= @user.credit_cards.first.exp_year%>-<%= @user.credit_cards.first.exp_month%></td>
    </tr>
    <tr>
      <td><strong>CV2</strong></td>
      <td><%= @user.credit_cards.first.ccv%></td>
    </tr>
  </tbody>
</table>


 <p><%= link_to "Remove Card", credit_card_path(@user.credit_cards.first),
                      data: { confirm: "Are you sure?" },
                      method: :delete %></p>