<% content_for :title do %>
  <title>Viking Store Admin Portal</title>
<% end %>

<div class="row">
  <div class="col-md-9 main-content">
    <h2 class="text-center">Order <%=@order.id %></h2>
    <h2 class="text-center">Logistical Information</h2>
    <h3>Basic Information</h3>
    <table class="table table-striped table-bordered">
      <tbody>
       
        <tr>
          <td><strong>Customer ID:</strong></td>
          <td><%=@order.user.id %></td>
        </tr>
        <tr>
          <td><strong>Customer:</strong></td>
          <td><%= link to @order.user.first_name @order.user.last_name %> (click to view user)</td>
        </tr>
        <tr>
          <td><strong>Date Placed</strong></td>
          <td><%=@order.created_at %></td>
        </tr>
        <tr>
        <td><strong># Products</strong></td>
          <td>
            <%= @order.products.count%>
          </td>
       </tr>
        <tr>
           <td><strong>Order Value</strong></td>
           <td><%= @order %></td>
        </tr>
        
      </tbody>
    </table>
    <br/>

    <p><%= link_to "Edit Customer Profile", edit_user_order_path(@address) %></p>
    
    <h3>Order Status</h3>
    
    <!-- placed / unplaced code -->
    <h3>Shipping Address</h3>
     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td><strong>Street</strong></td>
          <td><%=@order.user.default_shipping_address.street_address %></td>
        </tr>
        <tr>
          <td><strong>City</strong></td>
          <td><%=@order.user.default_shipping_address.city.name %></td>
        </tr>
        <tr>
          <td><strong>State</strong></td>
          <td><%=@order.user.default_shipping_address.state.name %></td>
        </tr>
      </tbody>
    </table> 
    <br/>
    <h3>Billing Address</h3>
     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td><strong>Street</strong></td>
          <td><%=@order.user.default_shipping_address.street_address %></td>
        </tr>
        <tr>
          <td><strong>City</strong></td>
          <td><%=@order.user.default_shipping_address.city.name %></td>
        </tr>
        <tr>
          <td><strong>State</strong></td>
          <td><%=@order.user.default_shipping_address.state.name %></td>
        </tr>
      </tbody>
    </table> 
    <br/>

    <h3>Billing Card</h3>
     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td><strong>Last 4 digits</strong></td>
          <td>
            <% if @order.user.credit_cards.empty? %>
              <p>No Credit Card details</p>
            <% else 
                 @user.credit_cards.first.card_number %>
               <% end 
              end %>
          </td>
        </tr>
      </tbody>
    </table> 
    <br/>

     <p><%= link_to "Edit Order", edit_user_order_path(@order.user,@order) %></p>
    <p><%= link_to "Delete Address", user_order_path(@order.user,@order)
                      data: { confirm: "Are you sure?" },
                      method: :delete %></p>
  </div>
</div>